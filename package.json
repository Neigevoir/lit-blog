{
  "name": "lit-project",
  "description": "Webcomponent lit-project following open-wc recommendations",
  "license": "MIT",
  "author": "lit-project",
  "version": "0.0.1",
  "scripts": {
    "analyze": "cem analyze --litelement",
    "dev": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds --hmr\"",
    "start": "MODE=prod wds",
    "build": "tsc && npm run analyze -- --exclude dist",
    "prepublish": "tsc && npm run analyze -- --exclude dist",
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore && prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore",
    "test": "tsc && wtr --coverage",
    "test:watch": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wtr --watch\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@lit-labs/router": "^0.1.1",
    "@lit-labs/ssr": "^2.2.3",
    "@material/web": "^0.1.0-alpha.0",
    "lit": "^2.4.1",
    "tslib": "^2.4.1"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.6.6",
    "@open-wc/dev-server-hmr": "^0.1.3",
    "@open-wc/eslint-config": "^9.0.0",
    "@open-wc/testing": "^3.1.7",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "@web/dev-server": "^0.1.35",
    "@web/test-runner": "^0.14.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.8.0",
    "typescript": "^4.9.3",
    "urlpattern-polyfill": "^6.0.2"
  },
  "customElements": "custom-elements.json",
  "type": "module"
}
